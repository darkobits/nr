{
  "extends": "@darkobits/ts",
  // N.B. This is only needed if we have top-level .ts files outside of 'src'
  // which TypeScript will use to incorrectly infer the project root.
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "skipLibCheck": true
  }
}
